{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": [
      "esnext",
      "dom"
    ],

    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "outDir": "./lib"
  },

  "include": [
    "src/**/*.ts"
  ]
}
